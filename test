const match = (args.search !== undefined && args.search !== null) ?
    {
      match: {
        ["terminal_name"]: {
          query: args.search,
          fuzziness: 'AUTO', // 使用自动模糊度，也可以设置为1或2
          boost: 5 // 权重，影响排序
        }
      }
    } : { match_all: {} }

  const query = {
    bool: {
      must: [
        {
          range: {
            published: {
              lte: args.datetime
            }
          }
        },
        match
      ]
    }
  };

  const body = await client.search({
    index: 'zero_trust',
    body: {
      query: query,
      sort: [
        // { [args.orderBy]: { order: args.orderMode } }
        { ["published"]: { order: args.orderMode } }
      ],
      search_after: args.after ? cursorToOffset(args.after) : undefined,
      size: args.first
    }
  })
